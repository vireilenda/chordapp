                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/gray"
                android:ems="7"
                android:hint="Write chord"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/textChord6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:textColor="@color/purple_700"
                android:gravity="center"
                android:ems="8"
                android:textSize="16dp"
                android:text="Chord"
                />

            <EditText
                android:id="@+id/bt6Chd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/gray"
                android:ems="7"
                android:hint="Write chord"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/textChord7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:textColor="@color/purple_700"
                android:gravity="center"
                android:ems="8"
                android:textSize="16dp"
                android:text="Chord"
                />

            <EditText
                android:id="@+id/bt7Chd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/gray"
                android:ems="8"
                android:hint="Write chord"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/textChord8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:textColor="@color/purple_700"
                android:gravity="center"
                android:ems="8"
                android:textSize="16dp"
                android:text="Chord"
                />

            <EditText
                android:id="@+id/bt8Chd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/gray"
                android:ems="8"
                android:hint="Write chord"
                />
        </TableRow>


    </TableLayout>

    <LinearLayout
        android:id="@+id/titleInstrument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/purple_700"
        android:layout_margin="32dp"
        app:layout_constraintEnd_toEndOf="@id/guidelineRight"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@id/tabSelect"
        app:layout_constraintBottom_toTopOf="@id/tabSelectSound">
        ">

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="CONFIGURAÇÃO DE TOQUE"
            android:textSize="20dp"

            />
    </LinearLayout>


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tabSelectSound"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:stretchColumns="1"
        android:layout_margin="32dp"
        android:background="@color/gray"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/guidelineRight"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@id/titleInstrument"

        >

        <TableRow>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"

                android:textColor="@color/purple_700"
                android:textSize="16dp"
                android:text="KEYBOARD"
                />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:layout_marginRight="16dp"
                android:textSize="16dp"
                android:text="PIANO"
                />

        </TableRow>

    </TableLayout>


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tabButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="2"
        android:layout_margin="32dp"
        android:background="@color/purple_700"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/guidelineRight"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout>
            <Button
                android:id="@+id/btnWrite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE"
                />


        </LinearLayout>

        <LinearLayout>
            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PLAY"
                />

        </LinearLayout>

    </TableLayout>

























</androidx.constraintlayout.widget.ConstraintLayout>